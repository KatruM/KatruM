<?xml version="1.0" encoding="UTF-8"?>
<pages:PopupPage
    xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    xmlns:common="clr-namespace:BDI3Mobile.Common"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
     xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    BackgroundColor="Transparent"
    x:Class="BDI3Mobile.Views.PopupViews.SelectBatteryTypePopupView">
    <Frame x:Name="BatteryTypePopupView" HasShadow="False" CornerRadius="20" BackgroundColor="Transparent" HeightRequest="210" WidthRequest="300" Padding="1" VerticalOptions="Center" HorizontalOptions="Center">
        <Frame.BorderColor>
            <OnPlatform x:TypeArguments="Color">
                <On Platform="UWP,Android,iOS" Value="LightGray"/>
            </OnPlatform>
        </Frame.BorderColor>
        <Frame.CornerRadius>
            <OnPlatform x:TypeArguments="x:Single">
                <On Platform="iOS" Value="20"></On>
                <On Platform="UWP,Android" Value="20"/>
            </OnPlatform>
        </Frame.CornerRadius>
        <Grid VerticalOptions="FillAndExpand" HorizontalOptions="Start">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Frame BackgroundColor="{x:Static common:Colors.PrimaryColor}"  Grid.RowSpan="2" CornerRadius="20" IsTabStop="False" HasShadow="False">
                <Label Text="SELECT BATTERY TYPE" TextColor="White" FontSize="17" FontAttributes="Bold" HorizontalTextAlignment="Center" />
            </Frame>
            <Frame x:Name="Frame1" HasShadow="False" BackgroundColor="White" CornerRadius="20" Grid.Row="1" Padding="0">
            <ListView x:Name="assesmentTypeListview" CachingStrategy="RecycleElement" VerticalScrollBarVisibility="Always" ItemsSource="{Binding BatteryTypeList}" HorizontalScrollBarVisibility="Never" Grid.Row="1" BackgroundColor="White" Footer="" ios:ListView.SeparatorStyle="FullWidth">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Vertical" Spacing="0" BackgroundColor="White">
                                <StackLayout Orientation="Horizontal" BackgroundColor="White" Padding="10,5" IsTabStop="False">
                                    <StackLayout.Margin>
                                     <OnPlatform x:TypeArguments="Thickness">
                                            <On Platform="iOS" Value="0, 10, 0, 0" />
                                        </OnPlatform>
                                </StackLayout.Margin>
                                    <Label Text="{Binding Description}" FontSize="16"  TextColor="Black" VerticalOptions="Center" HorizontalOptions="FillAndExpand"/>
                                    <Image HeightRequest="20" WidthRequest="20" Source="checkmark.png" IsVisible="{Binding selected}" VerticalOptions="End" />
                                </StackLayout>
                                <BoxView  Color="{x:Static common:Colors.TableBorderColor}" VerticalOptions="End">
                                    <BoxView.HeightRequest>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="UWP">0.5</On>
                                            <On Platform="Android">0</On>
                                        </OnPlatform>
                                    </BoxView.HeightRequest>
                                </BoxView>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            </Frame>

             <Frame x:Name="AndroidFrame" HasShadow="False" BackgroundColor="White" CornerRadius="20" Grid.Row="1" Padding="0">
             <CollectionView x:Name="assesmentTypeCollectionView" ItemsSource="{Binding BatteryTypeList}" SelectionMode="Single" HorizontalScrollBarVisibility="Never" Grid.Row="1" BackgroundColor="White">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                            <StackLayout Orientation="Vertical" Spacing="0" BackgroundColor="White">
                                <StackLayout Orientation="Horizontal" BackgroundColor="White" Padding="10,5" IsTabStop="False">
                                    <StackLayout.Margin>
                                     <OnPlatform x:TypeArguments="Thickness">
                                            <On Platform="iOS" Value="0, 10, 0, 0" />
                                        </OnPlatform>
                                </StackLayout.Margin>
                                    <Label Text="{Binding Description}" FontSize="16"  TextColor="Black" VerticalOptions="Center" HorizontalOptions="FillAndExpand"/>
                                    <Image HeightRequest="20" WidthRequest="20" Source="checkmark.png" IsVisible="{Binding selected}" VerticalOptions="End" />
                                    <StackLayout.GestureRecognizers>
                                       <TapGestureRecognizer
                                    Tapped="TapGestureRecognizer_Tapped"
                                    NumberOfTapsRequired="1" />
                                </StackLayout.GestureRecognizers>
                                </StackLayout>
                                <BoxView  Color="{x:Static common:Colors.TableBorderColor}" VerticalOptions="End">
                                    <BoxView.HeightRequest>
                                        <OnPlatform x:TypeArguments="x:Double">
                                            <On Platform="UWP">0.5</On>
                                            <On Platform="Android">0.3</On>
                                        </OnPlatform>
                                    </BoxView.HeightRequest>
                                </BoxView>
                            </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            </Frame>
        </Grid>
    </Frame>
</pages:PopupPage>
