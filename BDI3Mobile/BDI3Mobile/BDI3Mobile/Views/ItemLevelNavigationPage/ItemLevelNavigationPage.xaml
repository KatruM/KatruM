<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage
                xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
                xmlns="http://xamarin.com/schemas/2014/forms" 
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                x:Class="BDI3Mobile.ItemLevelNavigationPage"
                xmlns:local="clr-namespace:BDI3Mobile;assembly=BDI3Mobile"
                xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
                xmlns:converter="clr-namespace:BDI3Mobile.ValueConverter" xmlns:htmllabel="clr-namespace:LabelHtml.Forms.Plugin.Abstractions;assembly=HtmlLabel.Forms.Plugin">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converter:SyncConverter x:Key="SyncConverter"/>
            <DataTemplate x:Key="Level1Template">
                <ViewCell>
                    <Grid Margin="0,1,0,1" ColumnSpacing="5" BackgroundColor="White" >
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SelectedCommand}"/>
                        </Grid.GestureRecognizers>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="7*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0" ColumnSpacing="5" Padding="0" Margin="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <htmllabel:HtmlLabel IsEnabled="False" TextType="Html" Padding="10,10,0,10" Margin="0,12,0,0" LineBreakMode="TailTruncation" MaxLines="1" VerticalOptions="Center" Grid.Column="0" Text="{Binding Text,Mode=TwoWay}" FontSize="18" TextColor="Black">
                                <htmllabel:HtmlLabel.IsVisible>
                                    <OnPlatform x:TypeArguments="x:Boolean">
                                        <On Platform="iOS">True</On>
                                        <On Platform="UWP">False</On>
                                        <On Platform="Android">False</On>
                                    </OnPlatform>
                                </htmllabel:HtmlLabel.IsVisible>
                            </htmllabel:HtmlLabel>
                            <Label IsEnabled="False" TextType="Html" Padding="10,10,0,10" LineBreakMode="TailTruncation" MaxLines="1" VerticalOptions="Center" Grid.Column="0" Text="{Binding Text,Mode=TwoWay}" FontSize="15" TextColor="Black">
                                <Label.IsVisible>
                                    <OnPlatform x:TypeArguments="x:Boolean">
                                        <On Platform="iOS">False</On>
                                        <On Platform="UWP">True</On>
                                        <On Platform="Android">True</On>
                                    </OnPlatform>
                                </Label.IsVisible>
                            </Label>
                            <Image IsEnabled="False" Margin="0,10,0,10" VerticalOptions="Center" Grid.Column="1" WidthRequest="15" HeightRequest="15">
                                <Image.Source>
                                    <FileImageSource File="{Binding ImageName}" />
                                </Image.Source>
                            </Image>
                        </Grid>
                        <Label IsEnabled="False" IsVisible="{Binding ShowStatus,Mode=TwoWay}" TextType="Html" MaxLines="1"  LineBreakMode="TailTruncation" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center" FontSize="18" Text="{Binding SubDomainStatus, Mode=TwoWay}"/>
                    </Grid>
                </ViewCell>
            </DataTemplate>
            <DataTemplate x:Key="Level2Template">
                <ViewCell>
                    <Grid Padding="0" Margin="0" >
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SelectedCommand}"/>
                        </Grid.GestureRecognizers>
                        <Grid BackgroundColor="White" Padding="0" Margin="0,1,0,1" ColumnSpacing="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="7*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" ColumnSpacing="5" Padding="0" Margin="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label IsEnabled="False" LineBreakMode="TailTruncation" Padding="20,10,0,10" VerticalOptions="Center" Grid.Column="0" Text="{Binding Text,Mode=TwoWay}" MaxLines="1" FontSize="15" TextColor="Black"/>
                                <Image IsEnabled="False" Margin="0,10,10,10" VerticalOptions="Center" Grid.Column="1" Source="{Binding ImageName}" WidthRequest="15" HeightRequest="15"/>
                            </Grid>
                            <Label IsEnabled="False" TextType="Html" MaxLines="1"  LineBreakMode="TailTruncation" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center" FontSize="18" Text="{Binding SubDomainStatus, Mode=TwoWay}"/>

                        </Grid>
                    </Grid>
                </ViewCell>
            </DataTemplate>
            <DataTemplate x:Key="AreaTemplate">
                <ViewCell>
                    <Grid Padding="0" Margin="0">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SelectedCommand}"/>
                        </Grid.GestureRecognizers>
                        <Grid BackgroundColor="White" Padding="0" Margin="0,1,0,1" ColumnSpacing="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="7*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0" ColumnSpacing="5" Padding="0" Margin="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label IsEnabled="False" LineBreakMode="TailTruncation" Padding="30,10,0,10" VerticalOptions="Center" Grid.Column="0" Text="{Binding Text,Mode=TwoWay}" MaxLines="1" FontSize="18" TextColor="Black"/>
                                <Image IsEnabled="False" Margin="0,10,10,10" VerticalOptions="Center" Grid.Column="1" Source="{Binding ImageName}" WidthRequest="15" HeightRequest="15"/>
                            </Grid>
                            <Label IsEnabled="False" TextType="Html" MaxLines="1" LineBreakMode="TailTruncation" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center" FontSize="15" Text="in-progress"/>
                        </Grid>
                    </Grid>
                </ViewCell>
            </DataTemplate>
            <DataTemplate x:Key="Level3Template">
                <ViewCell Height="60">
                    <Grid Padding="0" Margin="0"  >
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SelectedCommand}"/>
                        </Grid.GestureRecognizers>
                        <Grid  Padding="0" Margin="0,1,0,1" ColumnSpacing="3" BackgroundColor="White">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="14*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <StackLayout Spacing="0" Padding="35,10,0,0" Margin="0" Orientation="Vertical" Grid.Column="0">

                                <Label IsEnabled="False" TextType="Html" VerticalOptions="CenterAndExpand" Text="{Binding Code,Mode=TwoWay}" FontSize="14" MaxLines="1" LineBreakMode="TailTruncation" TextColor="Black">
                              
                         </Label>
                           
                        
                           <Label IsEnabled="False" Margin="0,5,0,3" TextType="Html" VerticalOptions="Center" Text="{Binding Text,Mode=TwoWay}" FontSize="12" TextColor="Black">
                                <Label.Margin>
                        <OnPlatform x:TypeArguments="Thickness">
                            <On Platform="iOS" Value="0,5,0,3"/>
                        </OnPlatform>
                    </Label.Margin>
                               <!--<Label.IsVisible> <OnPlatform x:TypeArguments="x:Boolean">
                            <OnPlatform.iOS> false </OnPlatform.iOS>
                            </OnPlatform> </Label.IsVisible>-->
                         </Label>
                            <!--<htmllabel:HtmlLabel IsEnabled="False" Margin="0,5,0,0" TextType="Html"  VerticalOptions="Start" Text="{Binding Text,Mode=TwoWay}" FontSize="fTest Rec" TextColor="Black">
                            <htmllabel:HtmlLabel.IsVisible> <OnPlatform x:TypeArguments="x:Boolean">
                            <OnPlatform.iOS> true </OnPlatform.iOS>
                            </OnPlatform>
                            </htmllabel:HtmlLabel.IsVisible>
                         </htmllabel:HtmlLabel>-->
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding SelectedCommand}"/>
                                </StackLayout.GestureRecognizers>
                            </StackLayout>
                            <StackLayout Grid.Column="1" Margin="0,10,5,10">
                                <Image IsEnabled="False"  VerticalOptions="CenterAndExpand" WidthRequest="24" HeightRequest="24">
                                    <Image.Source>
                                        <FileImageSource File="{Binding ProgressImage}" />
                                    </Image.Source>
                                </Image>
                            </StackLayout>
                        </Grid>
                    </Grid>

                </ViewCell>
            </DataTemplate>
            <DataTemplate  x:Key="StartingPointTemplate">
                <ViewCell>
                    <Grid Padding="0" Margin="0" BackgroundColor="LightGray" HeightRequest="70">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SelectedCommand}"/>
                        </Grid.GestureRecognizers>
                        <Grid  Padding="0" Margin="0,1,0,1" ColumnSpacing="0" RowSpacing="0">
                            <Label IsEnabled="False" TextType="Html" Padding="20,20,10,0" Text="{Binding Text,Mode=TwoWay}" TextColor="Black" Font="Bold,15">
                            <Label.IsVisible> <OnPlatform x:TypeArguments="x:Boolean">
                                        <On Platform="iOS">False</On>
                                        <On Platform="UWP">True</On>
                                        <On Platform="Android">True</On>
                                    </OnPlatform> </Label.IsVisible>
                         </Label>
                             <htmllabel:HtmlLabel IsEnabled="False" TextType="Html" Padding="20,20,10,20" Text="{Binding Text,Mode=TwoWay}" TextColor="Black" Font="Bold,12">
                                <htmllabel:HtmlLabel.IsVisible> <OnPlatform x:TypeArguments="x:Boolean">
                                        <On Platform="iOS">True</On>
                                        <On Platform="UWP">False</On>
                                        <On Platform="Android">False</On>
                                    </OnPlatform> </htmllabel:HtmlLabel.IsVisible>
                         </htmllabel:HtmlLabel>
                        </Grid>
                    </Grid>
                </ViewCell>
            </DataTemplate>
            <local:NavigationDataTemplateSelector x:Key="NavigationDataTemplateSelector"
                Level1Template="{StaticResource Level1Template}"
                Level2Template="{StaticResource Level2Template}"
                Level3Template="{StaticResource Level3Template}"
                AreaTemplate="{StaticResource AreaTemplate}"
                StartingPointTemplate="{StaticResource StartingPointTemplate}"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Frame x:Name="MainFrame" Padding="0,4,0,0" HorizontalOptions="Start" VerticalOptions="FillAndExpand" WidthRequest="500">
        <Frame.Margin>
            <OnPlatform x:TypeArguments="Thickness">
                <On Platform="UWP" Value="0,90,0,0"/>
              </OnPlatform>
        </Frame.Margin>

        <Grid BackgroundColor="#f4f4f4" RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" BackgroundColor="#f4f4f4">
